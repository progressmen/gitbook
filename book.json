{
    "author": "progressmen",
    "description": "记录Gitbook的配置和一些插件的使用",
    "extension": null,
    "generator": "site",
    "title": "progressmen",
    "variables": {},
    "language": "zh-hans",
    "links": {
        "sidebar": {
          "Blog": "http://progressmen.cn"
        }
    },
    "output": null,
    "pdf": {
        "fontSize": 12,
        "footerTemplate": null,
        "headerTemplate": null,
        "margin": {
            "bottom": 36,
            "left": 62,
            "right": 62,
            "top": 36
        },
        "pageNumbers": false,
        "paperSize": "a4"
    },
    "plugins": [
        "-livereload",
        "theme-comscore",
        "-lunr", "-search", "sharing",
        "search-pro",
	    "github",
	    "donate",
        "tbfed-pagefooter",
	    "toggle-chapters",
	    "-summary",
        "atoc"
    ],
    "pluginsConfig": {
        "theme-default": {
            "showLevel": true
        },
        "search-pro": {
            "cutWordLib": "nodejieba",
            "defineWord" : ["Gitbook Use"]
        },
	"github": {
            "url": "https://github.com/zhangjikai/gitbook-use"
        },
	"donate": {
          "wechat": "http://pic.me33.cn/2019-01-01-102212.png",
          "alipay": "http://pic.me33.cn/2019-01-01-102252.png",
          "title": "",
          "button": "赏",
          "alipayText": "支付宝打赏",
          "wechatText": "微信打赏"
        },
	"tbfed-pagefooter": {
            "copyright":"Copyright &copy progressmen.cn 2019",
            "modify_label": "该文件修订时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "atoc": {
          "addClass": true,
          "className": "atoc"
        },
        "sharing": {
            "weibo": true,
            "facebook": true,
            "twitter": true,
            "google": false,
            "instapaper": false,
            "vk": false,
            "all": [
                "facebook", "google", "twitter",
                "weibo", "instapaper"
            ]
        }
    }
}
